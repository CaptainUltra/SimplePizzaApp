@model SimplePizzaApp.Web.Models.Pizza.ShowPizzaViewModel

@{
    ViewData["Title"] = "Подробности за пица";
}

<h3>Подробности за пица</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            №
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Съставки:
        </dt>
        @if (Model.Ingredients.Count == 0)
        {
            <p>-</p>
}
        <ul>
            @foreach (var ingredient in Model.Ingredients)
            {
                <li>@ingredient.Ingredient.Name</li>
            }
        </ul>
    </dl>
</div>
<div>
    @Html.ActionLink("Промяна", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Обратно към списъка</a>
</div>
