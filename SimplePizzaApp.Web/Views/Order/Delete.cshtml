@model SimplePizzaApp.Web.Models.Order.DeleteOrderViewModel

@{
    ViewData["Title"] = "Изтриване на поръчка";
}

<h3>Изтриване на поръчка</h3>

<h5>Сигурни ли сте, че искате да изтриете тази поръчка?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            №:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Име на клиент:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            Адрес:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Изтриване" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
