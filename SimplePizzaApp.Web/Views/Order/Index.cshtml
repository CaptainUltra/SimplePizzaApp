@model IEnumerable<SimplePizzaApp.Web.Models.Order.IndexOrderViewModel>

@{
    ViewData["Title"] = "Всички поръчки";
}

<h3>Всички поръчки</h3>

<p>
    <a asp-action="Create">Добавяне на поръчка</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Име на клиент
            </th>
            <th>
                Адрес
            </th>
            <th>
                Обща сума
            </th>
            <th>
                Последна промяна
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Промяна", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Изтриване", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
