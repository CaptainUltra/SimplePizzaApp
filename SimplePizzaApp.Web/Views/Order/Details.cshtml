@model SimplePizzaApp.Web.Models.Order.ShowOrderViewModel

@{
    ViewData["Title"] = "Подробности за поръчка";
}

<h3>Подробности за поръчка</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            №:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Име на клиент:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            Адрес:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Обща сума:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Последна промяна:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            Пици:
        </dt>
        <ul>
            @foreach (var pizza in Model.Pizzas)
            {
                <li>@pizza.Pizza.Name</li>
            }
        </ul>
    </dl>
</div>
<div>
    @Html.ActionLink("Промяна", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Обратно към списъка</a>
</div>
