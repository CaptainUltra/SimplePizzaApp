@model IEnumerable<SimplePizzaApp.Web.Models.Ingredient.ShowIngredientViewModel>

@{
    ViewData["Title"] = "Всички съставки";
}

<h3>Всички съставки</h3>

<p>
    <a asp-action="Create">Добавяне на съставка</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Име
            </th>
            <th>
                Последна промяна
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Промяна", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Изтриване", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
